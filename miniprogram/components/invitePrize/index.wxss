
/* 奖励 */
.page-module-invite-award-item{
    display: inline-block;
    vertical-align: middle;
    width: 204rpx;
    white-space: nowrap;
}
.page-module-invite-award-item:not(:last-child){
  margin-right: 20rpx;
}
.page-module-invite-award-item-hd{
  width: 100%;
  height: 192rpx;
  border-radius: 16rpx 16rpx 0 0 ;
  border: 1px solid  #FFC48D;
  background: rgba(255,244,228,1);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 24rpx ;
}
.page-module-invite-award-item-hd .page-module-invite-award-item-hd__img{
    width: 100%;
}
.page-module-invite-award-item-bd{
  width: 100%;
  height: 60rpx;
  background-color: #FFDC84;
  padding: 12rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 32rpx;
  color: #893100;
  font-size: 24rpx;
}

.page-module-invite-award-person{
  margin-top: 24rpx;
  margin-right: -20rpx;
  text-align: center;
}
.page-module-invite-award-item:last-child .page-module-invite-award-person{
  margin-right: 0;
}
.page-module-invite-award-item .page-module-invite-award-person-bar{
  width: 100%;
  height: 12rpx;
  background: #FFE6E6;
  position: relative;
  z-index: 3;
}
.page-module-invite-award-item:first-child .page-module-invite-award-person-bar::after{
  content: '';
    width: 50%;
    height: 12rpx;
    background:#fff;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
}
.page-module-invite-award-item:last-child .page-module-invite-award-person-bar::after{
  content: '';
    width: 50%;
    height: 12rpx;
    background:#fff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: -1;
}
.page-module-invite-award-person-bar-dot{
  width: 40rpx;
  height: 40rpx;
  background:#FFE6E6;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
}
.page-module-invite-award-person-bar-dot.active::before{
    content: '';
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    background: linear-gradient(135deg, #FF506E 16.67%, #FF7189 87.5%);
    border-radius: 50%;
    left: 50%;
    top:50%;
    transform: translate(-50%,-50%);
  }
  .page-module-invite-award-person-text{
    height: 40rpx;
    line-height: 40rpx;
    display: inline-block;
    color: rgba(149,27,27,1);
    font-size: 24rpx;
    font-weight: 400;
    min-width: 136rpx;
    margin: 20rpx auto;
    text-align: center;
    background: rgba(255,242,242,1);
    border-radius: 48rpx;
  }

  /* 邀请有礼 */
  .page-module-invite-record__alert{
    border-radius: 8px;
    background: rgba(255,242,242,1);
    padding: 16rpx;
    box-sizing: border-box;
    text-align: center;
    color: #951B1B;
  }
  .invite-record-alert__title{
    font-size: 32rpx;
    line-height: 44rpx;
  }
  .invite-record-alert__desc{
    font-size: 24rpx;
    line-height: 28rpx;
    margin-top: 4rpx;
  }
.page-module-invite-record-blank{
    margin-top: 52rpx;
  }
.page-module-invite-record-blank-img{
  margin: 0 auto;
  width: 552rpx;
  height: 280rpx;
  display: block;
}
 .page-module-invite-record-blank__text{
   line-height: 44rpx;
   font-size: 32rpx;
    text-align: center;
    color: #999897;
    margin-top: 24rpx;
 }
 .page-module-invite-record-detalis{
   margin-top: 48rpx;
 }
 .invite-record-cell-right{
   font-size: 24rpx;
   text-align: right;
 }
 .invite-record-cell-right__status{
   font-size: 28rpx;
 }
 .invite-record-cell .avatar{
   width: 96rpx;
   height: 96rpx;
  border-radius: 50%;
 }
 .invite-record-cell .title-image-large{
  width: 96rpx;
  height: 96rpx;
 border-radius: 50%;
 }
 .invite-record-cell .t-cell__title{
   width: 200rpx;
   
 }
 .invite-record-cell .t-cell__title .t-cell__title-text{
   display: block;
   text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
 }
.invite-record-cell .t-cell__title .t-cell__description-text{
  width: 200rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
 }
 .invite-record-cell-right__btns{
    padding: 0 16rpx;
    box-sizing: border-box;
    background: linear-gradient(180deg, rgba(255,125,125,1) 0%, rgba(255,34,80,1) 99%);
    font-size: 28rpx;
    color: #fff;
    border-radius: 24rpx;
 }


 /* 参与步骤 */
.step-num{
  height: 80rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 24rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.step-num.num1{
  width: 46rpx;
  background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/join-num1.svg);
}
.step-num.num2{
  width: 64rpx;
  background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/join-num2.svg);
}
.invite-step-item{
  display: inline-block;
  vertical-align: middle;
}
.invite-step-item.step-arrow {
  margin-left: 44rpx;
  margin-right: 44rpx;
}
.invite-step-item.step-arrow .step-arrow-icon{
    width: 30rpx;
    height: 20rpx;
    background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/step-arrow.svg);
}
.invite-step-item__text{
  display: inline-block;
  vertical-align: middle;
  color: #893100;
  font-size: 24rpx;
  font-weight: 700;
  white-space: normal;
}
.invite-step-item__text.step-item-s{
  width: 152rpx;
}
.invite-step-item__text.step-item-m{
  width: 188rpx;
}
 /* 邀请攻略 */
 .page-module-invite-raiders .page-module-invite-card-bd .p {
  color: rgba(0,0,0,0.8);
  font-size: 24rpx;
  line-height: 36rpx;
 }

/* 底部 */
.page-module-invite-bottom{
    z-index: 999;
    padding: 32rpx 28rpx;
    box-sizing: border-box;
    background: #ffdb83;
    border-radius: 24rpx 24rpx 0 0;
    min-height: 156rpx;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    box-shadow: 0 -5px 14px 0 rgba(255,159,55,1);
}
.page-module-invite-bottom .page-module-invite-share-btns{
    width: 100%;
    height: 80rpx;
    margin-top: 0;
    background: rgb(255,130,103); /* Old browsers */
    background: -moz-linear-gradient(top,  rgba(255,130,103,1) 0%, rgba(255,54,88,1) 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top,  rgba(255,130,103,1) 0%,rgba(255,54,88,1) 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom,  rgba(255,130,103,1) 0%,rgba(255,54,88,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff8267', endColorstr='#ff3658',GradientType=0 ); /* IE6-9 */
    box-shadow: 0 3px 5px 0 rgba(255,74,74,0.6);
}
.page-module-invite-rich{
  max-height: 100%;
  overflow-y: scroll;
  white-space: pre-wrap !important;
}
