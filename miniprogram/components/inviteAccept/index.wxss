
@import "../_base/styles/common.wxss";
.page-module-invite-accept__user{
  position: relative;
  z-index: 9;
}
.page-module-invite-accept__user-avator{
    width: 124rpx;
    height: 124rpx;
    border-radius: 50%;
    display: block;
    margin: 0 auto;
    
}
.page-module-invite-accept__user-message{
  width: 662rpx;
  height: auto;
  display: block;
  margin: 0 auto;
  background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/accept-user-message-bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  margin-top: -32rpx;
  padding: 66rpx 80rpx 48rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #893100;
}


.page-module-invite-halfDialog{
  text-align: center;
}
.page-module-invite-halfDialog .page-module-invite-half-screen-dialog{
  padding: 80rpx 28rpx;
  box-sizing: border-box;
}
.page-module-invite-halfDialog .page-module-invite-halfDialog__avator{
  width: 140rpx;
  height: 140rpx;
  display: block;
  margin: 0 auto;
  border-radius: 50%;
}
.page-module-invite-halfDialog__title{
  margin-top: 28rpx;
  color: rgba(0,0,0,1);
  font-size: 40rpx;
  line-height: 48rpx;
  font-weight: 500;
}

.page-module-invite-halfDialog__desc{
  color: rgba(135,141,150,1);
 font-size: 28rpx;
 font-weight: 400;
 line-height: 48rpx;
 margin-top: 8rpx;
}
.page-module-invite-halfDialog .page-module-invite-share-btns{
  background: linear-gradient(180deg, rgba(255,130,103,1) 0%, rgba(255,54,88,1) 100%);
  box-shadow: 0 3px 5px 0 rgba(255,74,74,0.6);
  position: absolute;
  bottom: 60rpx;
  left: 28rpx;
  right: 28rpx;
  width: auto;
  box-sizing: border-box;
}

.page-module-invite-halfDialog .page-module-invite-share-btns .page-module-invite-share-btns__text{
  font-size: 32rpx;
  line-height: 80rpx;
}
