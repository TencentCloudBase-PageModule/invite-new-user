
@font-face {
    font-family: 'HYYaKuHeiW';
    src: url('https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/fonts/HYYaKuHeiW.woff2') format('woff2');
  }
  .invite-theme-text{
    color: #FF2250;
  }
  
  .page-module-invite-wrap{
    background: #FFB464;
    padding: 0 36rpx;
    box-sizing: border-box;
    padding-bottom: 188rpx;
    min-height: 100vh;
  }
  .page-module-invite-share-btns{
    width: 536rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    border-radius: 48px;
    margin: 0 auto 0;
    font-size: 0;
    background: transparent;
  }
  .page-module-invite-share-btns__icon-wx{
    display: inline-block;
    vertical-align: middle;
    width: 40rpx;
    height: 36rpx;
    background-image: url('https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/invite-wx-icon.svg');
    background-size: 100% 100%;
    margin-right: 16rpx;
  }
  .page-module-invite-share-btns .page-module-invite-share-btns__icon-wx,  .page-module-invite-share-btns .page-module-invite-share-btns__text{
    display: inline-block;
    vertical-align: middle;
  }
  .page-module-invite-share-btns__text{
    font-size: 36rpx;
    line-height: 72rpx;
  }
  .page-module-invite-top{
    height: 756rpx;
    background: linear-gradient(180deg, #FE2A53 0%, #FFEF9D 100%);
    padding-top: 52rpx;
    box-sizing: border-box;
    position: relative;
    margin-left: -36rpx;
    margin-right: -36rpx;
  }
  .page-module-invite-top::before{
    position: absolute;
    content: '';
    /* z-index: -1; */
    height: 120rpx;
    width: 50%;
    left: 0;
    bottom: 0;
    clip-path: polygon(0 0, 0% 100%, 100% 100%);
    background-color: #FFB464;
  }
  .page-module-invite-top::after{
    position: absolute;
    content: '';
    height: 120rpx;
    width: 50%;
    right: 0;
    bottom: 0;
    clip-path: polygon(100% 0, 0% 100%, 100% 100%);
    background-color: #FFB464;
  }
  
  .page-module-invite-top-dot{
    background: rgba(255, 245, 220, 0.5);
    filter: blur(2px);
    border-radius: 50%;
    position: absolute;
  }
  .page-module-invite-top-dot.dot--s{
    width: 12rpx;
    height: 12rpx;
  }
  .page-module-invite-top-dot.dot--s.position-left{
    top: 122rpx;
    left: 28rpx;
  }
  .page-module-invite-top-dot.dot--m{
    width: 20rpx;
    height: 20rpx;
  }
  .page-module-invite-top-dot.dot--m.postion-right-top{
    top: 30rpx;
    right: 110rpx;
  }
  .page-module-invite-top-dot.dot--s.postion-right-bottom{
      top: 168rpx;
      right: 32rpx;
  }
  .page-module-invite-top-gold{
    position: absolute;
    background-repeat: no-repeat;
    background-size: 100% 100%;
  }
  .page-module-invite-top-gold.gold-blurry-right{
    top: 84rpx;
    right: 20rpx;
    width: 92rpx;
    height: 80rpx;
    background-image: url('https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/big-dot.svg')
  }
  .page-module-invite-top-gold.gold-blurry-left{
    width: 82rpx;
    height: 122rpx;
    top:200rpx;
    left: 0;
    background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/invite-accept-left.svg);
  }
  .page-module-invite-top-gold.gold-round-right{
      width: 92rpx;
      height: 86rpx;
      top: 386rpx;
      right: 0rpx;
      background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/invite-accept-right.svg);
      background-repeat: no-repeat;
      background-size: 100% 100%;
      z-index: 6;
  }
  .page-module-invite-top__title{
    font-size: 80rpx;
    text-align: center;
    color: #fff;
    font-family: 'HYYaKuHeiW';
    position: relative;
    z-index: 9;
  }
  .page-module-invite-top__small-dot{
    width: 12rpx;
    height: 12rpx;
    background: rgba(255, 245, 220, 0.5);
    filter: blur(2px);
    border-radius: 50%;
    position: absolute;
    top: 122rpx;
    left: 28rpx;
  }
  .page-module-invite-top__middle-dot{
    width: 20rpx;
    height: 20rpx;
    background: rgba(255, 245, 220, 0.5);
    border-radius: 50%;
    filter: blur(2px);
    position: absolute;
    top: 30rpx;
    right: 110rpx;
  }
  .page-module-invite-top__big-dot{
    position: absolute;
    top: 88rpx;
    right: 20rpx;
    width: 92rpx;
    height: 80rpx;
    background-image: url('https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/big-dot.svg');
    background-repeat: no-repeat;
    background-size: 100% 100%;
  }

  .page-module-invite-top-box-wrap{
    width: 100%;
    position: relative;
  }
  .page-module-invite-top-box-wrap.initiative::before{
    content: '';
    width: 100%;
    position: absolute;
    height: 666rpx;
    bottom: 200rpx;
    left: 0;
    background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/beam-bg1.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
  }
 
  .page-module-invite-top-box-wrap.accept::before{
    content: '';
    position: absolute;
    width: 100%;
    height: 666rpx;
    bottom: 333rpx;
    left: 0;
    background-image: url(https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/beam-bg2.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    z-index: 3;

  }
  .page-module-invite-top-box{
    position: relative;
    z-index: 3;
  }
  .page-module-invite-top-box-wrap.initiative .page-module-invite-top-box{
    width: 100%;
    height: 638rpx;
    background-image: url('https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/invite-prize-box-bg.png');
    background-size:100% 100%;
    background-repeat: no-repeat;
    padding: 48rpx 88rpx 40rpx;
    box-sizing: border-box;
  }

  
  .page-module-invite-top-box-wrap.accept .page-module-invite-top-box{
    margin-top: 20rpx;
    width: 716rpx;
    height: 626rpx;
    margin: 0 auto;
    background-image: url('https://imgcache.qq.com/open_proj/proj_qcloud_v2/scene-module/Invite-prize/miniprogram/images/invite-accept-bg.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    padding: 46rpx 50rpx;
    box-sizing: border-box;
  }
  
  .page-module-invite-top__hd{
    width: 100%;
    height: 354rpx;
    padding-top: 44rpx;
    text-align: center;
    box-sizing: border-box;
  }
  .page-module-invite-top-hd__desc{
    font-size: 24rpx;
    line-height: 48rpx;
    color: #501D00;
  }
  .page-module-invite-top-hd__integral{
      margin-top: 32rpx;
  }
  
  .page-module-invite-top-hd__integral-text{
    font-family: 'HYYaKuHeiW';
    font-size: 100rpx;
    line-height: 1;
    color: #FF7D7D;
    background: #ff7d7d; 
    background: -moz-linear-gradient(top,  #ff7d7d 0%, #ff2250 100%);
    background: -webkit-linear-gradient(top,  #ff7d7d 0%,#ff2250 100%); 
    background: linear-gradient(to bottom,  #ff7d7d 0%,#ff2250 100%); 
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff7d7d', endColorstr='#ff2250',GradientType=0 ); 
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text; 
    color: transparent;
  }
  .page-module-invite-top-hd__integral-unit{
    display: inline-block;
    vertical-align: middle;
    font-size: 24rpx;
    line-height: 48rpx;
    font-family: '';
    color: #FF2250;
  }
  .page-module-invite-top__hd.integral-num .page-module-invite-top-hd__integral-text{
    font-size: 110rpx
  }
  .page-module-invite-top__hd.integral-num .page-module-invite-top-hd__integral{
    margin-top: 20rpx;
  }
  .page-module-invite-top-hd__btn{
    display: inline-block;
    height: 48rpx;
    padding: 0 36rpx;
    border: 1px solid #FF2250;
    box-sizing: border-box;
    border-radius: 66rpx;
    text-align: center;
    color: #FF2250;
    font-size: 24rpx;
    line-height: 48rpx;
    margin: 32rpx auto 0;
  }
  .page-module-invite-top__hd.integral-num .page-module-invite-top-hd__btn{
    margin-top: 10rpx;
  }
  .page-module-invite-top__bd{
      width: 100%;
      height: 230rpx;
      padding-top: -2rpx;
      box-sizing: border-box;
  }
  .page-module-invite-top__bd-friend{
    width: 354rpx;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 12px;
    color: #893100;
    font-size: 24rpx;
    margin: 0 auto 24rpx; 
    text-align: center;
  }
  /* 受邀 */
  .page-module-invite-top-box-wrap.accept .page-module-invite-top{
    height: 940rpx;
  }
  .page-module-invite-top-box-wrap.accept .page-module-invite-top-box .page-module-invite-top__hd {
    width: 100%;
    height: 334rpx;
  }
  
  .page-module-invite-top-box-wrap.accept .page-module-invite-top-box .page-module-invite-top__bd{
    height: 194rpx;
    padding: 52rpx  40rpx ;
    box-sizing: border-box;
  }
  .page-module-invite-top-box-wrap.accept .page-module-invite-top-box .page-module-invite-top__bd .page-module-invite-share-btns{
    height: 80rpx;
    line-height: 80rpx;
  }