<view class="page-module-invite-half-mask {{exclass}}" wx:if="{{halfShow}}" bind:tap="handleCloseHalfDialog"></view>
<view class="page-module-invite-half-screen-dialog {{halfShow?'page-module-invite-half-screen-dialog_show':''}}">

  <view class="page-module-invite-half-screen-dialog__hd" wx:if="{{title}}">  
    <view class="page-module-invite-half-screen-dialog__hd__main" >
      <strong class="page-module-invite-half-screen-dialog__title">积分规则</strong>
    </view>
  </view>
  <view class="page-module-invite-half-screen-dialog__close" bind:tap="handleCloseHalfDialog">
      <image class="page-module-invite-icon-close" src="https://scene-module-9gee6idgabd997ca-1306328562.tcloudbaseapp.com/signIn/images/icon-close.svg" />
    </view>
  <view class="page-module-invite-half-screen-dialog__bd">
    <view class="page-module-invite-half-screen-dialog__bd-inner">
      <slot></slot>
    </view>
  </view>
</view>